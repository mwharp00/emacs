-	    (if bookmark-annotation
-		bookmark-annotation
-	      bookmark-name)
-	    "]]")))
+    (planner-make-link
+     (concat "bookmark://" bookmark-name)
+     (if bookmark-annotation
+	 bookmark-annotation
+       bookmark-name))))
 
 ;;;###autoload
 (defun planner-bookmark-browse-url (url)
